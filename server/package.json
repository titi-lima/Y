{
  "name": "boilerplate-server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "engines": {
    "node": ">=18.16"
  },
  "dependencies": {
    "@prisma/client": "5.6.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.99",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.17.1",
    "express-winston": "^4.2.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.6.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "scripts": {
    "build": "swc src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "start": "npm run build && node dist/server.js",
    "dev": "tsx watch --clear-screen=false --ignore node_modules src/server.ts",
    "prod": "npm run migration:deploy && npm run start",
    "migration": "prisma migrate dev",
    "migration:deploy": "prisma migrate deploy",
    "migration:reset": "prisma migrate reset --force",
    "studio": "prisma studio",
    "generate": "prisma generate",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "push": "prisma db push",
    "test:ci": "cross-env DATABASE_URL='file:./test-database.sqlite' prisma db push && cross-env DATABASE_URL='file:./test-database.sqlite' jest --runInBand --ci",
    "test": "cross-env DATABASE_URL='file:./test-database.sqlite' prisma db push && cross-env DATABASE_URL='file:./test-database.sqlite' jest --runInBand",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.29",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/node": "20.5.9",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.9.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.4.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "jest-cucumber": "^3.0.1",
    "supertest": "^6.2.2",
    "ts-jest": "^29.1.1",
    "ts-jest-resolver": "^2.0.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.6.1",
    "typescript": "^5.2.2"
  }
}
